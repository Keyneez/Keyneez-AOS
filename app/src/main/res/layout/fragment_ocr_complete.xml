<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.keyneez.presentation.ocr.guide.complete.OcrCompleteFragment">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_ocr_complete"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_ocr_complete_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_ocr_guide_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ocr_complete_description"
            style="@style/PretendardBold24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="김지은님의 ID를 발급했어요!"
            tools:text="@string/ocr_complete_description"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_ocr_complete_back" />

        <ImageView
            android:id="@+id/iv_ocr_complete_card"
            android:layout_width="253dp"
            android:layout_height="318dp"
            android:layout_marginTop="104dp"
            android:src="@drawable/img_ocr_complete_card_dummy"
            app:layout_constraintBottom_toTopOf="@id/btn_ocr_complete_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ocr_complete_description" />

        <ImageView
            android:id="@+id/iv_ocr_complete_jelly"
            android:layout_width="208dp"
            android:layout_height="0dp"
            android:layout_marginBottom="-107dp"
            android:src="@drawable/img_id_main_real"
            tools:src="@drawable/img_ocr_complete_jelly_dummy"
            app:layout_constraintBottom_toTopOf="@id/iv_ocr_complete_card"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_ocr_complete_type"
            style="@style/PretendardSemibold12"
            app:layout_constraintTop_toTopOf="@id/iv_ocr_complete_card"
            app:layout_constraintStart_toStartOf="@id/iv_ocr_complete_card"
            android:layout_marginTop="153dp"
            android:layout_marginStart="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray050"
            android:text="호기심 가득 문화인" />

        <TextView
            android:id="@+id/tv_ocr_complete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PretendardBold28"
            android:textColor="@color/gray050"
            app:layout_constraintTop_toBottomOf="@id/tv_ocr_complete_type"
            app:layout_constraintStart_toStartOf="@id/iv_ocr_complete_card"
            android:layout_marginTop="4dp"
            android:layout_marginStart="23dp"
            android:text="김지은" />

        <ImageButton
            android:id="@+id/btn_ocr_complete_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="12dp"
            android:layout_marginStart="-12dp"
            app:layout_constraintStart_toEndOf="@id/tv_ocr_complete_name"
            app:layout_constraintTop_toTopOf="@id/tv_ocr_complete_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_ocr_complete_name"
            android:src="@drawable/ic_ocr_complete_detail"/>

        <TextView
            android:id="@+id/tv_ocr_complete_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PretendardMedium14"
            android:textColor="@color/gray050"
            app:layout_constraintTop_toBottomOf="@id/tv_ocr_complete_name"
            app:layout_constraintStart_toStartOf="@id/iv_ocr_complete_card"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            android:text="2000.07.07"/>

        <TextView
            android:id="@+id/btn_ocr_complete_confirm"
            style="@style/PretendardBold16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/shape_gray900_fill_4_rect"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="@string/ocr_complete_confirm"
            android:textColor="@color/gray050"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_auto_ocr_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="44dp">

        <TextView
            android:id="@+id/tv_auto_ocr_result_description"
            style="@style/PretendardBold24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/auto_ocr_result_description"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_auto_ocr_result_name"
            style="@style/PretendardMedium14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/ocr_result_name"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_auto_ocr_result_description" />

        <EditText
            android:id="@+id/et_auto_ocr_result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray400_bottomline_rect"
            android:hint="@string/ocr_result_name_hint"
            android:paddingVertical="17dp"
            app:layout_constraintTop_toBottomOf="@id/tv_auto_ocr_result_name" />

        <ImageButton
            android:id="@+id/btn_auto_ocr_result_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_auto_login_result_edit"
            app:layout_constraintBottom_toBottomOf="@id/et_auto_ocr_result_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_auto_ocr_result_name" />

        <TextView
            android:id="@+id/tv_auto_ocr_result_sub_entry"
            style="@style/PretendardMedium14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ocr_result_school"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_auto_ocr_result_name" />

        <EditText
            android:id="@+id/et_auto_ocr_result_sub_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray400_bottomline_rect"
            android:hint="@string/ocr_result_school_hint"
            android:paddingVertical="17dp"
            app:layout_constraintTop_toBottomOf="@id/tv_auto_ocr_result_sub_entry" />

        <ImageButton
            android:id="@+id/btn_auto_ocr_result_sub_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_auto_login_result_edit"
            app:layout_constraintBottom_toBottomOf="@id/et_auto_ocr_result_sub_entry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_auto_ocr_result_sub_entry" />

        <TextView
            android:id="@+id/btn_auto_ocr_result_reshoot"
            style="@style/PretendardBold16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_gray050_fill_gray900_line_5_rect"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="다시 촬영"
            android:textColor="@color/gray900"
            app:layout_constraintEnd_toStartOf="@id/btn_auto_ocr_result_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_auto_ocr_result_sub_entry" />

        <TextView
            android:id="@+id/btn_auto_ocr_result_confirm"
            style="@style/PretendardBold16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="109dp"
            android:background="@drawable/shape_gray900_fill_5_rect"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="네, 맞아요"
            android:textColor="@color/gray050"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_auto_ocr_result_reshoot"
            app:layout_constraintTop_toBottomOf="@id/et_auto_ocr_result_sub_entry" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>